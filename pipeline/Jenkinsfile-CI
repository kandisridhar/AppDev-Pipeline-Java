@Library('shared-library') _
pipeline {
    agent any
    
    environment {
       azcon = credentials('azure-pasha')
       sonarlogin = credentials('sonar_token')
       }
    
    
    stages {
      
       stage('Infra Provisioning') {
           tools {
                   jdk "java"
                }
           steps {
               Infra()               
           }
           }
       stage('Maven Build') {
           tools {
                   jdk "java"
                }
           steps {
               BuildApp()               
           }
           }
        stage('Store war to Nexus') {
           tools {
                   jdk "java"
                }
           steps {
               StoreToNexus()               
           }
           }
        stage('Sonar Analysis') {
           tools {
                   jdk "java"
                }
           steps {
               SonarApp(sonarlogin)              
           }
        }
        stage('FetchPublicIP') {
           tools {
                   jdk "java"
                }
           steps {
               FetchPublicIP()               
           }
        }
         stage('FetchPublicIP') {
           tools {
                   jdk "java"
                }
           steps {
               DownloadFromNexus()               
           }
        }
         stage('Push Image to Docker Hub') {
           tools {
                   jdk "java"
                }
           steps {
              withCredentials([usernamePassword(credentialsId: 'dockervmjava', passwordVariable: 'password', usernameVariable: 'username')]) {
               PushToDockerHub(username, password)
               cleanWs()               
           }
        }
        }
    }
}  

